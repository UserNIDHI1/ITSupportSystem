@model ITSupportSystem.Core1.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    <html lang="en-us">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>ITSMS Login</title>

        <link rel="stylesheet" href="css/login.css">
    </head>
    <body>
        <div class="loginDiv">
            <div class="loginBox">
                <div class="loginLogo">
                    <img src="image/Logo1.png" alt="CRB Logo">
                </div>

                <div class="formSection">
                    <div class="inputBox" style="color:red">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "errorMsg" })
                    </div>

                    <div class="inputBox" style="color:red">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "errorMsg" })
                    </div>

                    <div class="inputBox btnInput">
                        <button type="submit" class="loginBtn">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
}


