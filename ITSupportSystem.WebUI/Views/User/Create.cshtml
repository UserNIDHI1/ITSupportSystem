@model ITSupportSystem.Core1.ViewModel.UserViewModel

@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <!DOCTYPE html>
    <html lang="en-us">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>CRB Form</title>

        @*<link rel="stylesheet" href="css/style.css">*@

    </head>
    <body>
        <div class="mainDiv">
            <div class="formDiv">
                <div class="topTitleHead pb20">
                    <h3 style="text-align:left;font-family:sans-serif;color:forestgreen"><b>CREATE</b></h3>
                </div>
                <div class="formSection">
                    <div class="inputBox">
                        <label class="form-label"><b>Name</b><strong style="color:red;font-size:18px;">*</strong></label>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "errorMsg" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="inputBox selectBox">
                        <label class="form-label"><b>RoleId</b><strong style="color:red;font-size:18px;">*</strong></label>
                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "errorMsg" })
                        @Html.DropDownListFor(model => model.RoleId, new SelectList(Model.RoleDropDown, "Id", "Name"), "Select Role", new { @class = "form-control" })
                    </div>


                    <div class="inputBox">
                        <label class="form-label"><b>Email</b><strong style="color:red;font-size:18px;">*</strong></label>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "errorMsg" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="inputBox">
                        <label class="form-label"><b>Password</b><strong style="color:red;font-size:18px;">*</strong></label>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "errorMsg" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="inputBox">
                        <label class="form-label"><b>UserName</b><strong style="color:red;font-size:18px;">*</strong></label>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "errorMsg" })
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>


                    <div class="inputBox">
                        <label class="form-label"><b>MobileNo</b><strong style="color:red;font-size:18px;">*</strong></label>
                        @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "errorMsg" })
                        @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <div class="inputBox w-100">
                        <label class="form-label"><b>Gender</b><strong style="color:red;font-size:18px;">*</strong></label>                
                        <div class="radioBtnSection">
                            <div class="radioBtnDiv">
                                Female @Html.RadioButtonFor(model => model.Gender, "Female")
                                <span class="checkmark"></span>
                            </div>
                            <div class="radioBtnDiv">
                                Male @Html.RadioButtonFor(model => model.Gender, "Male")
                                <span class="checkmark"></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "errorMsg" })
                        </div>
                    </div>
                    <div class="inputBox">
                        <button type="submit" class="btnDiv" style="color:black">CREATE</button>
                    </div>
                </div>
            </div>

        </div>
    </body>
</html>
}

<div>@Html.ActionLink("back to list", "Index", "Account")</div>