@using Kendo.Mvc.UI
@using ITSupportSystem.Core1.ViewModel

@{
    ViewBag.Title = "Index";
}

<h1 align="center" style="margin-bottom:50px;color:green"><b>Index</b></h1>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary"})
</p>

@(
    Html.Kendo().Grid<RoleViewModel>().Name("grid")

    .ToolBar(t=>t.Search())
    .Editable(editable => editable.Mode(GridEditMode.InLine))
    .Search(s=>
    {
        s.Field(c => c.Name);
        s.Field(c => c.Code);
    })

    .Columns(columns =>
    {
        columns.Bound(c => c.Name);
        columns.Bound(c => c.Code);

        columns.Template(c => { }).Title(string.Empty)
             .ClientTemplate(
                 "<a href='" + Url.Action("Edit", "Role") + "/#=Id#' class='btn btn-success'>Edit</a>" + " | " + "<a href='" + Url.Action("Delete", "Role") + "/#=Id#' class='btn btn-danger'>Delete</a>").Width(200);
    }).HtmlAttributes(new { style = "height:370px;" })

    .Sortable()

    .Scrollable()
    .Pageable()
    .Filterable()
    .DataSource(dataSource => dataSource.Ajax().Model(model => model.Id(p => p.Id)).Read(read => read.Action("GetAllRolesJson", "Role"))

    .Update(update => update.Action("Edit", "Role"))
    .Destroy(destroy => destroy.Action("Delete", "Role"))
    .Create(create => create.Action("Create", "Role"))
    .PageSize(5))
)
